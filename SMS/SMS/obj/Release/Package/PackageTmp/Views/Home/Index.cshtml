                            rows.push('<li> <img class="candi-img" src="/images/Candidate_img.png"><span class="candidate-name">' + j + '</span>  <span class="pull-right votes">' + data[i].TotalVotes + '</span> <hr></li>');
                        }
                        //<img src="~/images/Candidate_img.png" />
